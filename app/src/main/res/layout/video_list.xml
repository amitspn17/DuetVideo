<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="clickListener"
            type="com.example.myapplication.ui.adapters.VideoListAdapter.ClickListener"/>
        <variable
            name="data"
            type="com.example.myapplication.response.VideoData"/>
        <variable
            name="image"
            type="com.example.myapplication.util.Constant" />
        <variable
            name="position"
            type="int" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/categories_image"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{(view)-> clickListener.onclick(view,position)}"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/category_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            tools:text="category"
            android:layout_height="wrap_content"
            android:text="@{data.video_image}"
            app:layout_constraintTop_toBottomOf="@+id/categories_image"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>